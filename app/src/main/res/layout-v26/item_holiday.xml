<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_list"
    android:background="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/holidayImageView"
        android:layout_width="@dimen/img_size"
        android:layout_height="@dimen/img_size"
        android:padding="@dimen/img_pad"
        android:src="@drawable/ic_baseline_today_24"
        app:tint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/dataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size"
        android:layout_marginEnd="@dimen/marEnd"
        android:text="dd-mm-yyyy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/holidayImageView"/>

    <TextView
        android:id="@+id/nameHolidayTextView"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size"
        android:textColor="@color/primaryText"
        android:textStyle="bold"
        android:lines="1"
        android:text="Name Holiday"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>